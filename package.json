{
  "name": "slotsavvy-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:ml\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:ml": "cd apps/ml && uvicorn app:app --reload --port 8000",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "seed": "npm run seed --workspace=apps/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
